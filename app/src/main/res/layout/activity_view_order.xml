<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/primary_light"
    xmlns:tools="http://schemas.android.com/tools"
    tools:context=".ViewOrder">

    <Button
        android:id="@+id/btn_back"
        android:layout_width="32dp"
        android:layout_height="32dp"
        android:layout_margin="12dp"
        android:layout_alignParentStart="true"
        android:background="@drawable/ic_left_back" />

    <LinearLayout
        android:id="@+id/main_container"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:paddingHorizontal="12dp"
        android:layout_alignParentStart="true"
        android:layout_below="@id/btn_back"
        android:layout_above="@id/order_details_container"
        android:orientation="vertical">

        <TextView
            android:id="@+id/tv_message"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="18sp"
            android:gravity="center"
            android:paddingVertical="16dp"
            android:background="@drawable/card_background"
            android:layout_marginVertical="12dp"
            android:textColor="#4CAF50"
            android:text="Thank you! Your Order has been placed successfully." />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="20sp"
            android:textColor="@color/black"
            android:paddingHorizontal="8dp"
            android:layout_marginTop="12dp"
            android:textStyle="bold"
            android:text="Order Items" />

        <ScrollView
            android:id="@+id/main_content"
            android:scrollbarSize="0dp"
            android:padding="8dp"
            android:visibility="visible"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_above="@+id/menu">

            <LinearLayout
                android:id="@+id/food_items_container"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:divider="@drawable/divider"
                android:showDividers="middle">

                <include
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    layout="@layout/food_item_card"/>

                <include
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    layout="@layout/food_item_card"/>

            </LinearLayout>

        </ScrollView>

    </LinearLayout>

    <RelativeLayout
        android:id="@+id/order_details_container"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:padding="16dp"
        android:layout_alignParentBottom="true">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_toStartOf="@id/tv_order_total"
            android:textColor="@color/black"
            android:textSize="24sp"
            android:layout_marginBottom="12dp"
            android:text="Total: "/>

        <TextView
            android:id="@+id/tv_order_total"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:textColor="@color/black"
            android:textSize="24sp"
            android:layout_marginBottom="12dp"
            android:text="â‚¹ 0" />

        <Button
            android:id="@+id/btn_cancel_order"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_below="@id/tv_order_total"
            android:background="#FF0000"
            android:textColor="@color/white"
            android:layout_marginBottom="8dp"
            android:text="Cancel" />

        <Button
            android:id="@+id/btn_view_orders"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_below="@id/btn_cancel_order"
            android:background="@color/black"
            android:textColor="@color/white"
            android:text="View Orders" />

    </RelativeLayout>

</RelativeLayout>
