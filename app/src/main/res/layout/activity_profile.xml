<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/primary_light"
    xmlns:tools="http://schemas.android.com/tools"
    tools:context=".MyProfileActivity">

    <LinearLayout
        android:id="@+id/main_container"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:paddingHorizontal="12dp"
        android:layout_alignParentStart="true"
        android:layout_above="@id/bottom_nav_menu"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="8dp"
            android:orientation="vertical">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="24sp"
                android:textColor="@color/black"
                android:textStyle="bold"
                android:text="My Profile" />

        </LinearLayout>

        <ScrollView
            android:id="@+id/main_content"
            android:scrollbarSize="0dp"
            android:padding="8dp"
            android:visibility="visible"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_above="@+id/menu">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">

               <androidx.cardview.widget.CardView
                   android:id="@+id/profile_img_container"
                   android:layout_width="250dp"
                   android:layout_height="250dp"
                   android:layout_centerHorizontal="true"
                   android:layout_marginVertical="48dp"
                   app:cardCornerRadius="125dp">


                   <ImageView
                       android:id="@+id/profile_img"
                       android:layout_width="wrap_content"
                       android:layout_height="250dp"
                       android:src="@drawable/my_image" />
               </androidx.cardview.widget.CardView>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical"
                    android:padding="32dp"
                    android:layout_below="@id/profile_img_container">

                    <EditText
                        android:id="@+id/upname"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@drawable/textbox_back"
                        android:drawableLeft="@drawable/ic_person_outline_white"
                        android:drawablePadding="12dp"
                        android:padding="12dp"
                        android:textColor="@color/white"
                        android:textColorHint="@color/hint"
                        android:textSize="20sp"
                        android:hint="Name"
                        android:inputType="textPersonName" />

                    <EditText
                        android:id="@+id/upemail"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="20dp"
                        android:background="@drawable/textbox_back"
                        android:drawableLeft="@drawable/ic_mail_outline_white"
                        android:drawablePadding="12dp"
                        android:padding="12dp"
                        android:textColor="@color/white"
                        android:textColorHint="@color/hint"
                        android:textSize="20sp"
                        android:hint="E-mail"
                        android:inputType="textPersonName" />

                    <EditText
                        android:id="@+id/upphone"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="20dp"
                        android:background="@drawable/textbox_back"
                        android:drawableLeft="@drawable/ic_phone_outline_white"
                        android:drawablePadding="12dp"
                        android:padding="12dp"
                        android:textColor="@color/white"
                        android:textColorHint="@color/hint"
                        android:textSize="20sp"
                        android:hint="Phone"
                        android:inputType="textPersonName" />

<!--                    <EditText-->
<!--                        android:id="@+id/up_pass"-->
<!--                        android:layout_width="match_parent"-->
<!--                        android:layout_height="wrap_content"-->
<!--                        android:layout_marginTop="20dp"-->
<!--                        android:background="@drawable/textbox_back"-->
<!--                        android:drawableLeft="@drawable/ic_lock_outline_white"-->
<!--                        android:drawablePadding="12dp"-->
<!--                        android:padding="12dp"-->
<!--                        android:textColor="@color/white"-->
<!--                        android:textColorHint="@color/hint"-->
<!--                        android:textSize="20sp"-->
<!--                        android:hint="Password"-->
<!--                        android:inputType="textPassword"/>-->

                    <Button
                        android:id="@+id/up_change"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="22dp"
                        android:background="@drawable/loginbutton_back"
                        android:text="Update"
                        android:textColor="@color/white"
                        android:textSize="19sp" />

                </LinearLayout>

            </RelativeLayout>

        </ScrollView>

    </LinearLayout>

    <include
        android:id="@+id/bottom_nav_menu"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        layout="@layout/bottom_nav_actions"/>

</RelativeLayout>