<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout android:id="@+id/food_item_card"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="horizontal"
    android:background="@drawable/card_background"
    android:layout_width="match_parent"
    android:layout_height="105dp"
    android:clipToOutline="true"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <androidx.cardview.widget.CardView
        android:id="@+id/image_container"
        android:layout_width="105dp"
        android:layout_height="105dp"
        app:cardCornerRadius="8dp">

        <ImageView
            android:id="@+id/iv_food_item_image"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_alignParentStart="true"
            android:scaleType="centerCrop"
            android:src="@drawable/ic_nearesto" />

    </androidx.cardview.widget.CardView>

    <LinearLayout
        android:id="@+id/food_item_details"
        android:orientation="vertical"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="12dp"
        android:layout_toEndOf="@id/image_container"
        android:layout_toStartOf="@id/iv_food_item_type"
        android:layout_centerVertical="true"
        android:divider="@drawable/divider"
        android:showDividers="middle">

        <TextView
            android:id="@+id/tv_food_item_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Item name 1"
            android:textColor="@color/black"
            android:textSize="15sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/tv_restaurant_name"
            android:textSize="13sp"
            android:textStyle="normal"
            android:textColor="@color/black"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Restaurant Name" />

        <TextView
            android:id="@+id/tv_food_item_price"
            android:textSize="18sp"
            android:textStyle="bold"
            android:textColor="@color/black"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="$20" />

    </LinearLayout>

    <ImageView
        android:id="@+id/iv_food_item_type"
        android:layout_width="20dp"
        android:layout_height="32dp"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_marginEnd="12dp"
        android:paddingBottom="12dp"
        android:src="@drawable/veg" />

</RelativeLayout>
